@model List<BusReserveSystem.Models.Bus>
<div class="container" id="abtus" style="margin-top:70px;">
    <div class="jumbotron">
        <h1 style="text-align:center">...Traveling is Health...</h1>
        <p>The world is a book, and those who do not travel read only a page. Travel inspires us more than anything else we do. Evidence of the languages, cultures, scenery, food, and design sensibilities that one discover all over the world can be found in every piece of his jewelry. If you wish to travel far and fast, travel light. Take off all your envies, jealousies, unforgiveness, selfishness and fears.</p>
    </div>
</div>
<style>
   @@media (min-width: 1200px){
   .container {
        width: 1292px;
    }
    }
</style>
<div class="container" style="margin-bottom:70px;">

    <div class="row">

        @foreach (var x in Model)
        {
            <div class="col-sm-6 col-md-3 col-xs-12">

                <!-- normal -->
                <div class="thumbnail ih-item square effect15 left_to_right" style="height:260px;">
                    <a href="#">
                        <div class="img"><img src="@x.SourcePath" alt="img"></div>
                        <div class="info" >
                            <h3>@x.Name</h3>
                            <p>@x.Description</p>
                            <h3>Rent: @x.Rent</h3>
                        </div>
                    </a>
                </div>
                <!-- end normal -->
                @Html.ActionLink("Reserve", "./../Ticket/reserve", new { Id = x.Id }, new { @class = "main-slider__btn btn btn-default btn-round" })

                <a href="@Url.Action("view","Home")" class="main-slider__btn btn btn-default btn-round" role="button"> View </a>
            </div>
        }
    </div>
</div>



@{ViewBag.Title = "Bus";}
@section s1{
    <link href="../../Content/ihover.css" rel="stylesheet">
    <style>
        .thumbnail {
            width: 300px;
            height: 240px;
            overflow: auto;
        }
    </style>
}
