@model BusReserveSystem.Models.Reservation
<div class="container" id ="newcus">
  <h2>Seat Reservation</h2>
  @*<form class="form-horizontal" role="form" method ="post" action ="../../Ticket/save">*@
    @using (Html.BeginForm("../Ticket/save", "", FormMethod.Post,
                                      new { @class = "form-horizontal" }))
{

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Bus:</label>
          <div class="col-sm-10">          
              <label class="control-label col-sm-2" for="pwd">@ViewBag.bs.Name</label>
              </div>
          </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Source:</label>
          <div class="col-sm-10">          
              <label class="control-label col-sm-2" for="pwd">@Model.Source</label>
              </div>
          </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Destination:</label>
          <div class="col-sm-10">          
              <label class="control-label col-sm-2" for="pwd">@Model.Destination</label>
              </div>
          </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Reservation Date:</label>
          <div class="col-sm-10">          
              <label class="control-label col-sm-2" for="pwd">@Model.Date</label>
              </div>
          </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Time Slot:</label>
          <div class="col-sm-10">          
              <label class="control-label col-sm-2" for="pwd">@Model.TimeSlot</label>
              </div>
          </div>



      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Total Tickets:</label>
      <div class="col-sm-10">          
        <select class="form-control" id ="tkt" name ="Total_Tickets" required>
            
            @for (int i = 1; i <= Model.Total_Tickets; i++)
            {
                <option value ="@i">@i</option>
            }

</select>
      </div>
    </div>

      <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Total Bill:</label>
          <div class="col-sm-10">          
              
              <label class="control-label col-sm-2" id ="bll" name ="TB" for="pwd">0</label>
              <script>
                  var i = $("#tkt").val();
                 var bill = @Model.Total_Bill + (@Model.Total_Bill * ((@ViewBag.bs.Percentage) / 100));
                  alert(bill);
                  $("#bll").text(bill);

                  $("#tkt").change(function () {
                      var i = $("#tkt").val();
                      
                      alert(bill * parseInt(i));
                      $("#bll").text(bill* parseInt(i));
                      
                  });
              </script>
              </div>
          </div>

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Done Reservation</button>
      </div>
    </div>
  @*</form>*@
    }
</div>


@{ViewBag.Title = "New Ticket";}




